<h1>Listing restaurants</h1>

<table>
  <tr>
    <th>id</th>
    <th>name</th>
    <th>street</th>
    <th>city</th>
    <th>state</th>
    <th>zip</th>
    <th>lat/lng?</th>
    <th>promotions</th>
    <th>created at</th>
  </tr>

<% @restaurants.each do |restaurant| %>
  <tr>
    <td><%= restaurant.id %></td>
    <td><%= restaurant.name %></td>
    <td><%= restaurant.street %></td>
    <td><%= restaurant.city %></td>
    <td><%= restaurant.state %></td>
    <td><%= restaurant.zip %></td>
    <td><%= 'x' if restaurant.lat and restaurant.lng %></td>
    <td><%= restaurant.promotions.count %></td>
    <td><%= restaurant.created_at %></td>
    <td><%= link_to 'Show', restaurant %></td>
    <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
    <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

